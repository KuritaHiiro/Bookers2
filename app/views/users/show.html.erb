<p class="flash"><%= flash[:notice] %></p>

<h1>Books</h1>
  <table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <%= image_tag @user.get_profile_image(50, 50) %>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>

<%= render 'books/left', user: @user, book: @book %>