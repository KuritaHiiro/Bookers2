<p class="flash"><%= flash[:notice] %></p>

<h2>User info</h2>
<%= form_with model: @user, method: :patch, local: true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept:"image/*" %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
  <%= f.submit "Update User" %>
<% end %>

<!--一時避難-->
<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

