<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error">
          <h3 class="text-danger"><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user, method: :patch, local: true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
           <%= f.file_field :profile_image, class:"form-control-file" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"input-group-text" %>
        </div>
      <% end %>
    </div>
  </div>
</div>