<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" vontent="width=delete-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-dark dg-dark">
        <div class="container">
          <%= link_to "Bookers", "/", class: "navbar-brand p-3" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item ">
                <i class="fa-solid fa-house-chimney"></i><%= link_to "Home", user_path(current_user), class: "navbar-brand p3" %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-users"></i><%= link_to "Users", users_path, class: "navbar-brand p3" %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-book-open"></i><%= link_to "Books", books_path, class: "navbar-brand p3" %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-right-from-bracket"></i><%= link_to "Log out", "/users/sign_out", class: "navbar-brand p3" %>
              </li>
              <% else %>
              <li class="nav-item">
                <i class="fa-solid fa-house-chimney"></i><%= link_to "Home", "/", class: "navbar-brand p3" %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-link"></i><%= link_to "About", "/homes/about", class: "navbar-brand p3" %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", "/users/sign_up", class: "navbar-brand p3" %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-right-to-bracket"></i><%= link_to "Log in", "/users/sign_in", class: "navbar-brand p3" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
