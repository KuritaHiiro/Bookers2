<h1>Books</h1>
<table class="table table-striped">
    <tr>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.user.name %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
</table>

<%= render 'books/left', user: @user, book: @book %>