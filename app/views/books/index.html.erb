<h1>Indexページ</h1>
<% @books.each do |book| %>
<div>
  <p>User: <%= book.user.name %></p>
  <p><%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion: <%= book.body %></p>
</div>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>