<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p>User: <%= book.user.name %></p>
  <p><%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion: <%= book.body %></p>
</div>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>